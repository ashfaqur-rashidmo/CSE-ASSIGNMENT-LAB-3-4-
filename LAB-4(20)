#include <stdio.h>

int main()
{
    int n, row, col;

    printf("Enter an integer: ");
    scanf("%d", &n);

    for (row = 1; row <= n; row++)
        {
        // print spaces
        for (col = 1; col <= n - row; col++)
        {
            printf(" ");
        }
        // print asterisks
        for (col = 1; col <= 2 * row - 1; col++)
        {
            printf("*");
        }
        printf("\n");
    }
        for(row = n - 1;row >= 1;row--)
        {
            //printing spaces
            for(col = 1;col <= n-row;col++)
            {
                printf(" ");
            }
               // printing stars
               for(col = 1;col <= (2*row)-1;col++)
               {
                   printf("*");
               }
                   printf("\n");

        }


    return 0;
}



